code

#include <SFML/Graphics.hpp>

class Carrier
{
    private:
        float x, y;
    public:
        Carrier();
        sf::CircleShape draw();
        void update();
};

Carrier::Carrier()
{
    x = 0;
    y = 0;
}

sf::CircleShape Carrier::draw()
{
    sf::CircleShape shape(50.f);
    shape.setFillColor(sf::Color::Blue);
    shape.setPosition(sf::Vector2f(x, y));
    return shape;
}

void Carrier::update()
{
    x += 1;
    y += 1;
}

int main()
{
    Carrier myCarrier;

    sf::RenderWindow window(sf::VideoMode(1000, 1000), "Taskforce 0.1");
    // sf::Clock c;
    while (window.isOpen())
    {
        // auto dt = c.restart().asSeconds();
        sf::Event event;
        while (window.pollEvent(event))
        {
            if (event.type == sf::Event::Closed)
                window.close();
        }
        myCarrier.update();

        window.clear();
        window.draw(myCarrier.draw());
        window.display();

    }

    return 0;
}
